<div class="row">
	<div class="col-xl-12 order-xl-1">
		<div class="card bg-secondary shadow">
			<div class="card-header bg-white border-0">
				<div class="row align-items-center">
					<div class="col-8">
						<h3 class="mb-0">Galeri &mdash; Tambah</h3>
					</div>
				</div>
			</div>
			<div class="card-body">
				<form method="POST">
					<!-- Form -->
					<input type="hidden" id="input-divisi" name="divisi" class="form-control form-control-alternative" placeholder="Divisi" value="Tilawah">
					<div class="pl-lg-4">
						<div class="row">
							<div class="col-lg-12">
								<div class="form-group">
									<label class="form-control-label" for="input-nama">Nama Penyunting <span style="color: #db4437;">*</span></label>
									<input type="text" id="input-nama" name="penyunting" class="form-control form-control-alternative" placeholder="Nama lengkap">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-6">
								<div class="form-group">
									<label class="form-control-label" for="input-judul">Judul <span style="color: #db4437;">*</span></label>
									<input type="text" id="input-judul" name="judul" class="form-control form-control-alternative" placeholder="Judul album">
								</div>
							</div>
							<div class="col-lg-6">
								<div class="form-group">
									<label class="form-control-label" for="input-tanggal">Tanggal <span style="color: #db4437;">*</span></label>
									<input type="date" id="input-tanggal" name="tanggal" class="form-control form-control-alternative" placeholder="contoh: 2018/12/12">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12">
								<div class="form-group">
									<label class="form-control-label" for="input-isi">Keterangan</label>
									<textarea rows="3" id="input-keterangan" name="keterangan" class="form-control form-control-alternative" placeholder="Isi keterangan album."></textarea>
								</div>
							</div>
						</div>
					</div>
					<hr class="my-4" />
					<!-- Pengaturan -->
					<div class="text-center border-0 pt-1">
						<div class="d-flex justify-content-between">
							<button type="button" class="btn btn-danger float-left" data-original-title="Batal menambahkan berita">
								<div>
									<i class="ni ni-fat-remove"></i>
									<span>Batal</span>
								</div>
							</button>
							<button class="btn btn-default float-right" data-original-title="Simpan Berita">
								<div>
									<i class="ni ni-check-bold"></i>
									<span>Simpan</span>
								</div>
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>