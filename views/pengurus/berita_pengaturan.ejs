<div class="row">
	<div class="col-xl-12 order-xl-1">
		<div class="card bg-secondary shadow">
			<div class="card-header bg-white border-0">
				<div class="row align-items-center">
					<div class="col-8">
						<h3 class="mb-0">Berita &mdash; Tambah</h3>
					</div>
				</div>
			</div>
			<div class="card-body">
				<script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>
				<script src="/assets/pengurus/js/berita.js"></script>
				<form method="POST">
					<!-- Form -->
					<input type="hidden" id="input-divisi" name="divisi" class="form-control form-control-alternative" placeholder="Divisi" value="Tilawah">
					<div class="pl-lg-4">
						<div class="row">
							<div class="col-lg-12">
								<div class="form-group">
									<label class="form-control-label" for="input-judul">Judul <span style="color: #db4437;">*</span></label>
									<input type="text" id="input-judul" name="judul" class="form-control form-control-alternative" placeholder="Judul berita" value="<%= data.judul %>" required>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-6">
								<div class="form-group">
									<label class="form-control-label" for="input-tanggal">Tanggal <span style="color: #db4437;">*</span></label>
									<input type="date" id="input-tanggal" name="tanggal" class="form-control form-control-alternative" placeholder="contoh: 2018/12/12" value="<%= data.tanggal %>" required>
								</div>
							</div>
							<div class="col-lg-6">
								<div class="form-group">
									<label class="form-control-label" for="input-penyunting">Nama penyunting <span style="color: #db4437;">*</span></label>
									<input type="text" id="input-penyunting" name="penyunting" class="form-control form-control-alternative" placeholder="Nama lengkap" value="<%= data.penyunting %>" required>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12">
								<div class="form-group">
									<label class="form-control-label" for="input-gambar">Gambar <span style="color: #db4437;">*</span></label>
									<input type="text" id="input-gambar" name="gambar" class="form-control form-control-alternative" placeholder="Link gambar" value="<%= data.gambar %>" required>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12">
								<div class="form-group">
									<label class="form-control-label" for="input-isi">Isi <span style="color: #db4437;">*</span></label>
									<textarea rows="5" id="input-isi" name="isi" class="form-control form-control-alternative" placeholder="Isi berita." required><%= data.isi %></textarea>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-12">
								<div class="form-group">
									<label class="form-control-label" for="input-sumber">Sumber</label>
									<input type="text" id="input-sumber" name="sumber" class="form-control form-control-alternative" placeholder="Sumber berita" value="<%= data.sumber %>" required>
								</div>
							</div>
						</div>
					</div>
					<hr class="my-4" />
					<!-- Pengaturan -->
					<div class="text-center border-0 pt-1">
						<div class="d-flex justify-content-between">
							<button type="button" id="batal" class="btn btn-danger float-left" data-original-title="Batal menambahkan berita">
								<div>
									<i class="ni ni-fat-remove"></i>
									<span>Batal</span>
								</div>
							</button>
							<button id="submit" class="btn btn-default float-right" data-original-title="Simpan Berita">
								<div>
									<i class="ni ni-check-bold"></i>
									<span>Simpan</span>
								</div>
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>