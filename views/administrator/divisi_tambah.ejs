<div class="row">
	<div class="col-xl-12 order-xl-1">
		<div class="card bg-secondary shadow">
			<form method="POST">
				<div class="row justify-content-center">
					<div class="col-lg-3 order-lg-2">
						<div class="card-profile-image">
							<a>
								<img src="/assets/pengurus/img/theme/.jpg" class="rounded-circle">
							</a>
						</div>
					</div>
				</div>
				<div class="card-body pt-6 pt-md-2 mt-6">
					<!-- Informasi -->
					<h6 class="heading-small text-muted mb-4">Informasi pengguna</h6>
					<div class="pl-lg-4">
						<div class="row">
							<div class="col-lg-6">
								<div class="form-group">
									<label class="form-control-label" for="input-username">Username</label>
									<input type="text" name="username" id="input-username" class="form-control form-control-alternative" placeholder="Username">
								</div>
							</div>
							<div class="col-lg-6">
								<div class="form-group">
									<label class="form-control-label" for="input-password">Password</label>
									<input type="password" name="password" id="input-password" class="form-control form-control-alternative" placeholder="Password">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-6">
								<div class="form-group">
									<label class="form-control-label" for="input-nama">Nama</label>
									<input type="text" name="nama" id="input-nama" class="form-control form-control-alternative" placeholder="Nama lengkap">
								</div>
							</div>
							<div class="col-lg-6">
								<div class="form-group">
									<label class="form-control-label" for="input-email">Email</label>
									<input type="email" name="email" id="input-email" class="form-control form-control-alternative" placeholder="alvri@example.com">
								</div>
							</div>
						</div>
					</div>
					<hr class="my-4" />
					<!-- Tentang -->
					<h6 class="heading-small text-muted mb-4">Tentang divisi</h6>
					<div class="pl-lg-4">
						<div class="row">
							<div class="col-lg-12">
								<div class="form-group">
									<label class="form-control-label" for="input-fakultas">Tentang Divisi</label>
									<textarea name="tentang" rows="4" class="form-control form-control-alternative" placeholder="Tentang divisi."></textarea>
								</div>
							</div>
						</div>
					</div>
					<hr class="my-4" />
					<!-- Pengaturan -->
					<div class="text-center border-0 pt-1">
						<div class="d-flex justify-content-between">
							<span></span>
							<button class="btn btn-xm btn-default" data-original-title="Simpan Berita" style="width: 100%">
								<div>
									<i class="ni ni-check-bold"></i>
									<span>Simpan</span>
								</div>
							</button>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>