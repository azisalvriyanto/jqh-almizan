<div style="margin-top: 100px"></div>
<% for(var i=0; i < data.length; i++) { %>
	<section id="business" class="business bg-grey roomy-40">
	    <div class="container">
	        <div class="row">
	            <div class="main_business">
	                <div class="col-md-3">
	                    <div class="business_slid">
	                        <div class="slid_shap bg-grey"></div>
	                        <div class="business_items text-center">
	                            <div class="business_item">
	                                <div class="business_img">
	                                    <img src="<%= data[i].gambar %>" alt="" />
	                                </div>
	                            </div>
	                        </div>
	                    </div>
	                </div>

	                <div class="col-md-9">
	                    <div class="business_item sm-m-top-50">
	                        <p class="m-top-20"><%= data[i].tanggal %></p>
	                        <h2 class="text-uppercase"><strong><%= data[i].judul %></strong></h2>
	                        <p class="m-top-20">Penyunting <%= data[i].penyunting %></p>

	                        <div class="business_btn">
	                            <a href="/berita/<%= data[i].id %>" class="btn btn-default m-top-20">Baca selengkapnya</a>
	                        </div>

	                    </div>
	                </div>
	            </div>
	        </div>
	    </div>
	</section>
<% } %>